<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.DarkAccent" parent="@style/AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppThemePersian" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="fontPath">fonts/vazir.ttf</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="@style/ShowcaseView">
        <item name="sv_backgroundColor">#e51249d9</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
        <item name="sv_showcaseColor">#ff25467a</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
    </style>

    <style name="CustomText2" parent="@style/TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#8affffff</item>
    </style>
    <style name="CustomTitle" parent="@style/TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#ff00801a</item>
    </style>
    <style name="CustomTitle2" parent="@style/TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#deffffff</item>
    </style>

    <style name="Theme.Transparent" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>



</resources>
