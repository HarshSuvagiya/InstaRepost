<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24.0dip"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">

    <View
        android:layout_width="1000.0dip"
        android:layout_height="0.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:orientation="horizontal"
        android:paddingStart="24.0dip"
        android:paddingTop="12.0dip"
        android:paddingEnd="24.0dip"
        android:paddingBottom="12.0dip">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:background="@drawable/progress_shape"
            android:indeterminate="false"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar" />

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="24.0dip"
            android:layout_weight="1.0"
            android:gravity="start|center"
            android:text="@string/loading"
            android:textColor="@color/colorDefaultTab"
            android:textSize="14.0sp" />
    </LinearLayout>
</LinearLayout>